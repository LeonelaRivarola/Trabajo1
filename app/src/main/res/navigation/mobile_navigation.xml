<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_inicio"
    app:navGraph="@navigation/mobile_navigation"
    >

    <fragment
        android:id="@+id/navigation_inicio"
        android:name="com.example.trabajo1.ui.inicio.InicioFragment"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.trabajo1.ui.chat.ChatFragment"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_precios"
        android:name="com.example.trabajo1.ui.precios.PreciosFragment"
        tools:layout="@layout/fragment_precios" />

    <fragment
        android:id="@+id/navigation_mas"
        android:name="com.example.trabajo1.ui.mas.MasFragment"
        tools:layout="@layout/fragment_mas" >

        <fragment
            android:id="@+id/listaFragment"
            android:name="com.example.trabajo1.ui.map.ListaFragment"
            android:label="Lugares guardados"
            tools:layout="@layout/fragment_lista"/>

        <action
            android:id="@+id/action_navigation_mas_to_mapFragment"
            app:destination="@id/mapFragment"/>
        <action
            android:id="@+id/action_navigation_mas_to_videoFragment"
            app:destination="@id/videoFragment"/>
        <action
            android:id="@+id/action_navigation_mas_to_voiceFragment"
            app:destination="@id/voiceFragment"/>
        <action
            android:id="@+id/action_navigation_mas_to_configFragment"
            app:destination="@id/configFragment"/>
        <action
            android:id="@+id/action_mapFragment_to_listaFragment"
            app:destination="@id/listaFragment"/>

    </fragment>

    <fragment
        android:id="@+id/mapFragment"
            android:name="com.example.trabajo1.ui.map.MapFragment"
            tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/videoFragment"
        android:name="com.example.trabajo1.ui.video.VideoFragment"
        tools:layout="@layout/fragment_video" />
    <fragment
        android:id="@+id/voiceFragment"
        android:name="com.example.trabajo1.ui.voice.VoiceFragment"
        tools:layout="@layout/fragment_voice" />
    <fragment
        android:id="@+id/configFragment"
        android:name="com.example.trabajo1.ui.config.ConfigFragment"
        tools:layout="@layout/fragment_config" />

</navigation>