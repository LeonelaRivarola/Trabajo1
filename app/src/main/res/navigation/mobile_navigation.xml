<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_inicio"
    app:navGraph="@navigation/mobile_navigation"
    >

    <fragment
        android:id="@+id/navigation_inicio"
        android:name="com.example.trabajo1.ui.inicio.InicioFragment"
        tools:layout="@layout/fragment_inicio" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.trabajo1.ui.chat.ChatFragment"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_consejo"
        android:name="com.example.trabajo1.ui.consejo.ConsejoFragment"
        tools:layout="@layout/fragment_consejo" />

    <fragment
        android:id="@+id/navigation_mas"
        android:name="com.example.trabajo1.ui.mas.MasFragment"
        tools:layout="@layout/fragment_mas" >

        <action
            android:id="@+id/action_navigation_mas_to_mapFragment"
            app:destination="@id/mapFragment"/>
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
            android:name="com.example.trabajo1.ui.map.MapFragment"
            tools:layout="@layout/fragment_map" />

</navigation>